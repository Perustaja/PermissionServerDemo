@page
@model ResetPasswordModel
@{
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Reset Password";
}
<div class="shadow-sm login-panel">
    <div class="row m-0">
        <div class="col-sm-12 login-logo">
            <img src="~/img/samplelogo.svg"
                width="120" height="35" class="d-inline-block align-top">
        </div>
        <div class="col-sm-12 login-title">
            Reset your password
        </div>
        <hr />
        <div class="col-sm-12">
            Please enter in your new password below.
        </div>
        <hr />
        <div class="col-sm-12 text-left">
            <form method="post">
                @* Custom validation-summary *@
                @await Html.PartialAsync("_ValidationSummaryPartial", ModelState)
                <input asp-for="@Model.Input.UserId" type="hidden" />
                <input asp-for="@Model.Input.Code" type="hidden" />
                <div class="form-group">
                    <label asp-for="@Model.Input.NewPassword"></label>
                    <input asp-for="@Model.Input.NewPassword" class="form-control" />
                    <span asp-validation-for="@Model.Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Input.ConfirmNewPassword"></label>
                    <input asp-for="@Model.Input.ConfirmNewPassword" class="form-control" />
                    <span asp-validation-for="@Model.Input.ConfirmNewPassword" class="text-danger"></span>
                </div>
                <div class="form-group mt-5">
                    <input type="submit" value="Resend Confirmation" class="btn btn-secondary btn-login" />
                </div>
            </form>
            <div class="col-sm-12 mb-1 text-center">
                <a asp-page="/account/login">Return to login page.</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}