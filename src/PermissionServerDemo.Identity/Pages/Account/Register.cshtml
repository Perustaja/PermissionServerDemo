@page
@model RegisterModel
@{
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Register";
}
<div class="shadow-sm register-panel">
    <div class="row m-0">
        <div class="col-sm-12 login-logo">
            <img src="https://www.infopulse.com/uploads/media/c-sharp.svg" width="40" height="40">
            <h3 style="padding-left:8px; margin-bottom:0;">PermissionServerDemo</h3>
        </div>
        <div class="col-sm-12 login-title">
            Create an account
        </div>
        <div class="col-sm-12">
            <form method="post" autocomplete="off">
                @* Custom validation-summary *@
                @await Html.PartialAsync("_ValidationSummaryPartial", ModelState)
                <div class="form-row mb-1 pl-2 pr-2">
                    <div class="col-sm-6 d-flex flex-column align-items-start">
                        <label asp-for="Input.FirstName">@Html.DisplayNameFor(m => m.Input.FirstName)</label>
                        <input asp-for="Input.FirstName" class="form-control">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 d-flex flex-column align-items-start">
                        <label asp-for="Input.LastName">@Html.DisplayNameFor(m => m.Input.LastName)</label>
                        <input asp-for="Input.LastName" class="form-control">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-1 pl-4 pr-4">
                    <label asp-for="Input.Email">@Html.DisplayNameFor(m => m.Input.Email)</label>
                    <input asp-for="Input.Email" class="form-control">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group row mb-1 pl-4 pr-4">
                    <label asp-for="Input.Password">@Html.DisplayNameFor(m => m.Input.Password)</label>
                    <input asp-for="Input.Password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group row mb-1 pl-4 pr-4">
                    <label asp-for="Input.ConfirmPassword">@Html.DisplayNameFor(m => m.Input.ConfirmPassword)</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group row justify-content-center mt-4">
                    <div class="col-sm-6">
                        <input type="submit" value="Create an account" class="btn btn-secondary btn-login" />
                    </div>
                </div>
            </form>
            <hr />
            <div class="col-sm-12 mb-1 text-center">
                Already have an account? <a href="https://permissionserverdemo.dev/portal">Sign in.</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}