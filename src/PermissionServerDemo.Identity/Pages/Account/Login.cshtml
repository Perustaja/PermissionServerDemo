@page
@model LoginModel
@{
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login";
}
@* PRG Notification alert *@
@await Html.PartialAsync("_TempDataNotificationPartial")

<div class="shadow-sm login-panel">
    <div class="row m-0">
        <div class="col-sm-12 login-logo">
            <img src="https://www.infopulse.com/uploads/media/c-sharp.svg" width="40" height="40">
            <h3 style="padding-left:8px; margin-bottom:0;">PermissionServerDemo</h3>
        </div>
        <div class="col-sm-12 login-title">
            Sign in
        </div>
        <div class="col-sm-12">
            <form method="post">
                @* Custom validation-summary *@
                @await Html.PartialAsync("_ValidationSummaryPartial", ModelState)
                <div class="form-group row">
                    <label asp-for="Input.Email">@Html.DisplayNameFor(m => m.Input.Email)</label>
                    <input asp-for="Input.Email" class="form-control">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.Password">@Html.DisplayNameFor(m => m.Input.Password)</label>
                    <input asp-for="Input.Password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group row justify-content-between">
                    <div class="d-flex justify-content-start vertical-align-center">
                        <div class="form-check">
                            <input class="form-check-input form-check-inline" asp-for="Input.RememberMe">
                            <label class="form-check-label" asp-for="Input.RememberMe"></label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a asp-page="ForgotPassword">Forgot your password?</a>
                    </div>
                </div>
                <div class="form-group row mt-5">
                    <input type="submit" value="Login" class="btn btn-secondary btn-login" />
                </div>
            </form>
            <hr />
            <div class="col-sm-12 mt-4 text-center">
                Are you a new user? <a asp-page="Register">Create your account.</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}