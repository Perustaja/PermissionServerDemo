@page
@model IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Invite";
    var headerClass = Model.Success ? "error text-success" : "error text-danger";
    var headerText = Model.Success ? "Invite Successful" : "Invite Failed";
}
<div class="p-2">
  <h3 class=@headerClass>@headerText</h3>
  <hr />
  <p class="error-descs">@Model.ResultMessage.ToString()</p>
</div>